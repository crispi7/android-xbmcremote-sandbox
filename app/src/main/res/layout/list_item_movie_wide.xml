<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="6dp"
				android:layout_marginRight="6dp"
				android:layout_marginTop="6dp"
				android:layout_marginBottom="6dp"
				android:background="@drawable/bg_card"
				android:paddingBottom="2dp"
				android:paddingLeft="0dp"
				android:paddingTop="0dp"
				android:paddingRight="10dp">

	<RelativeLayout
			android:id="@+id/list_movie_poster_wrapper"
			android:layout_width="80dp"
			android:layout_height="118dp">

		<ImageView
				android:id="@+id/list_movie_poster"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				android:adjustViewBounds="true"
				android:scaleType="centerCrop"
				android:contentDescription="Poster" />

	</RelativeLayout>

	<TextView
			android:id="@+id/title_movie"
			android:text="title_movie"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@+id/list_movie_poster_wrapper"
			android:layout_toRightOf="@+id/list_movie_poster_wrapper"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="10dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/light_primary_text"
			android:fontFamily="sans-serif-light"
			android:maxLines="2"
			android:ellipsize="marquee" />

	<TextView
			android:id="@+id/genres_movie"
			android:text="genres_movie"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/title_movie"
			android:layout_below="@+id/title_movie"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/light_secondry_text"
			android:fontFamily="sans-serif-light"
			android:maxLines="1"
			android:ellipsize="marquee" />


	<TextView
			android:id="@+id/runtime_movie"
			android:text="runtime_movie"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="@color/light_secondry_text"
			android:textSize="14dp"
			android:fontFamily="sans-serif-light"
			android:maxLines="1"
			android:layout_alignParentRight="true"
			android:layout_alignBottom="@+id/rating_movie"/>


	<TextView
			android:id="@+id/rating_movie"
			android:text="***"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@+id/title_movie"
			android:layout_alignBottom="@+id/list_movie_poster_wrapper"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/light_secondry_text"
			android:textSize="18dp"
			android:layout_marginBottom="10dp"/>

</RelativeLayout>