<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	style="@style/Card"
	android:layout_width="@dimen/square_compact_width"
	android:layout_height="wrap_content" >

	<RelativeLayout
		android:id="@+id/thumb_wrapper"
		android:layout_width="@dimen/square_compact_width"
		android:layout_height="@dimen/square_compact_width">

		<ImageView
			android:id="@+id/list_album_cover"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:adjustViewBounds="true"
			android:scaleType="centerCrop"
			android:contentDescription="@string/poster" />

	</RelativeLayout>

	<TextView
		android:text="title_album"
		android:id="@+id/title_album"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/thumb_wrapper"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="5dp"
		android:layout_alignParentLeft="true"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/light_primary_text"
		android:textSize="14sp"
		android:fontFamily="sans-serif-light"
		android:maxLines="1"
		android:ellipsize="end"
		tools:ignore="HardcodedText"/>

	<TextView
		android:text="title_artist"
		android:id="@+id/title_artist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/title_album"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="5dp"
		android:layout_marginBottom="5dp"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="@color/light_secondry_text"
		android:textSize="14sp"
		android:fontFamily="sans-serif-light"
		android:maxLines="1"
		android:ellipsize="end"
		tools:ignore="HardcodedText"/>

</RelativeLayout>