<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="Theme.XBMCRemote" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="actionBarStyle">@style/Widget.XBMCRemote.ActionBar</item>
		<item name="android:actionBarStyle" tools:ignore="NewApi">@style/Widget.XBMCRemote.ActionBar</item>
		<item name="android:editTextStyle">@style/Widget.XBMCRemote.EditTextStyle</item>
	</style>

	<style name="Widget.XBMCRemote.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="background">@color/dark_bg</item>
		<item name="android:background">@color/dark_bg</item>

		<item name="backgroundSplit">#ff0000</item>
		<item name="android:backgroundSplit" tools:ignore="NewApi">#ff0000</item>
	</style>

	<style name="Widget.XBMCRemote.EditTextStyle" parent="@android:style/Widget.EditText">
		<item name="android:textColor">@color/light_primary_text</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
	</style>

	<style name="Card">
		<item name="android:layout_margin">6dp</item>
		<item name="android:background">@drawable/bg_card</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:paddingRight">0dp</item>
	</style>

	<style name="Header">
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
	</style>
	<style name="Header.h1">
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:textStyle">italic</item>
		<item name="android:textSize">22sp</item>
	</style>
	<style name="Header.h2">
		<item name="android:layout_marginTop">-4dp</item>
		<item name="android:textColor">@color/light_secondry_text</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="NavigationDrawer">
		<item name="android:textColor">@color/dark_secondary_text</item>
	</style>
	<style name="NavigationDrawer.text">
		<item name="android:textSize">18sp</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
	</style>

	<style name="NavigationDrawer.DividerH">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">2dp</item>
		<item name="android:background">@color/dark_tertiary_text</item>
	</style>
	<style name="NavigationDrawer.DividerV">
		<item name="android:layout_width">1dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:background">@color/dark_tertiary_text</item>
	</style>

	<style name="NavigationDrawer.glowing">
		<item name="android:textColor">#ffffffff</item>
		<item name="android:shadowColor">#ffffffff</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">0</item>
		<item name="android:shadowRadius">20</item>

	</style>

	<style name="WizardPageContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="WizardPageTitle">
		<item name="android:id">@android:id/title</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:layout_marginLeft">@dimen/small_content_hpadding</item>
		<item name="android:layout_marginRight">@dimen/small_content_hpadding</item>
		<item name="android:textSize">36sp</item>
		<item name="android:textColor">#ff0099cc</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif-thin</item>
	</style>

	<style name="Paragraph">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:paddingTop">@dimen/list_item_padding_left</item>
		<item name="android:layout_marginLeft">@dimen/small_content_hpadding</item>
		<item name="android:layout_marginRight">@dimen/small_content_hpadding</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/light_primary_text</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
	</style>

	<style name="SeeMoreButton">
		<item name="android:background">@color/holo_blue_dark</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingBottom">1dp</item>
		<item name="android:textColor">@color/light_bg</item>
		<item name="android:textSize">12sp</item>
		<item name="android:minHeight">12dip</item>
		<item name="android:minWidth">48dip</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_marginRight">15dp</item>
		<item name="android:layout_marginTop">15dp</item>
		<item name="android:text">@string/button_see_more</item>
	</style>

	<style name="ButtonBar" parent="@android:style/ButtonBar">
		<item name="android:background">@color/light_bg</item>
		<item name="android:padding">0dp</item>
		<item name="android:height">48dp</item>
	</style>

	<style name="ButtonBarButton">
		<item name="android:textColor">@color/light_button_text</item>
		<item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
		<!--item name="android:minHeight">@dimen/list_item_height_small</item-->
	</style>

	<style name="Spinner">
		<item name="android:indeterminate">true</item>
		<item name="android:indeterminateDrawable">@drawable/spinner</item>
		<item name="android:indeterminateDuration">4000</item>
		<item name="android:indeterminateOnly">true</item>
	</style>

	<style name="PageLogo">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/page_icon</item>
		<item name="android:textColor">@color/light_tertiary_text</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_marginTop">16dp</item>
	</style>

	<style name="PageArrow">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:text">@string/ic_expand</item>
		<item name="android:textSize">250dp</item>
		<item name="android:textColor">@color/light_tertiary_text</item>
	</style>

</resources>
